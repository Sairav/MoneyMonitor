<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.svatts.my22.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:elevation="9dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/graphIcon"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start" />

                    <TextView

                        android:id="@+id/graphHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/graphIcon"
                        android:text="Expenses Monthly"

                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!--hello chart was here-->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>


            <!--graph was here-->
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="300dp"
            android:elevation="9dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/AccIcon"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start" />

                    <TextView

                        android:id="@+id/AccBalHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/AccIcon"
                        android:text="Account Balances"

                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/totalAvailText"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="15dp"
                        android:text="Total Available : " />

                    <TextView
                        android:id="@+id/totalAvail"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="15dp"
                        android:layout_marginEnd="15dp" />

                </RelativeLayout>

                <View
                    android:layout_width="310dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:id="@+id/totalBalYesText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="15dp"
                        android:text="Yes Bank - XXXX4194 : " />

                    <TextView
                        android:id="@+id/totalBalYes"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/totalBalBobText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="15dp"
                        android:text="Bank Of Baroda - XXXX3300 : " />

                    <TextView
                        android:id="@+id/totalBalBob"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="15dp" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="550dp"
            android:elevation="9dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recentIcon"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_gravity="start" />

                    <TextView

                        android:id="@+id/recentHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/recentIcon"
                        android:text="Latest Spends"

                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/t1"
                        layout="@layout/transaction"
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                    <include
                        android:id="@+id/t2"
                        layout="@layout/transaction"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/t1" />


                    <include
                        android:id="@+id/t3"
                        layout="@layout/transaction"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/t2" />

                    <include
                        android:id="@+id/t4"
                        layout="@layout/transaction"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/t3" />

                    <include
                        android:id="@+id/t5"
                        layout="@layout/transaction"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/t4" />


                </RelativeLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/view_all"
                    android:onClick="fun"
                    android:text="View All"
                    android:textColor="#fff" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

</android.support.v4.widget.NestedScrollView>


